
import turtle
t = turtle.Turtle()

t.home()
t.clear()
for x in range(4):
  for x in range(4):
    t.forward(100)
    t.left(90)
  t.left(-90)
print('hello')

turtle.home()
turtle.clear()
for i in range(4):
  for j in range(4):
    turtle.left(90)
    turtle.forward(10)
  turtle.up()
  turtle.forward(10)
  turtle.right(90)
  turtle.down()
  
  
